<div class="card">
  <div class="card-header">
    <h2>Registrar-se</h2>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <% f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"E-mail" %>
  </div>

  <div class="field form-group">
    <% f.label :password %>
    <% if @minimum_password_length %>    
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"Senha" %>
    <em>(Mínimo de <%= @minimum_password_length %> caracteres)</em>
  </div>

  <div class="field form-group">
    <% f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"confirmação de senha" %>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit "Registrar-se", class:"btn btn-secondary" %>
  </div>
<% end %>
<br/>
  </div>
</div>

<%= render "devise/shared/links" %>

