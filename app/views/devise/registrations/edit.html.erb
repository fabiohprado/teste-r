<div class="card">
  <div class="card-header">
    <h2>Editar Perfil <% resource_name.to_s.humanize %></h2>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <% f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"E-mail" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <% f.label :password %> <i>(Deixe em branco caso não queira alterar)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"Nova senha" %>
    <% if @minimum_password_length %>
      <em>Mínimo de <%= @minimum_password_length %> caracteres</em>
    <% end %>
  </div>
  <div class="field">
    <% f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"Confirmação da nova senha" %>
  </div>

  <div class="field">
    <% f.label :current_password %> <i>(Nós precisamos da senha atual para confirmar a troca)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control", placeholder:"Senha atual" %>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit "Update", class:'btn btn-secondary' %>
  </div>
  <% end %>

  </div>
</div>
<br/><br/>
  <div class="card" style="width: 18rem;">
  <div class="card-body">
    <h3>Cancelar minha conta</h3>
    <p>Não está feliz? <%= button_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Você tem certeza?" }, method: :delete, class:'btn btn-danger' %></p>
  </div>
<br/><br/>

<%= link_to "Voltar", :back, class:'btn btn-secondary' %>
