<h1>Friends List</h1>

<table class="table table-striped table-bordered table-sm">
  <thead class="table-dark">
    <tr>
      <th>Primeiro nome</th>
      <th>Ãºltimo nome</th>
      <th>E-mail</th>
      <th>Whatsapp</th>
      <th>Twitter</th>
      <th>User Id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.primeiro_nome %></td>
        <td><%= friend.ultimo_nome %></td>
        <td><%= friend.email %></td>
        <td><%= friend.telefone %></td>
        <td><%= friend.twitter %></td>
        <td><%= friend.user_id %></td>
        <td><%= link_to 'Show', friend %></td>        
        <td><%= link_to 'Edit', edit_friend_path(friend) %></td>
        <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' } %></td>        
        </tr>
    <% end %>
  </tbody>
</table>

<br>

