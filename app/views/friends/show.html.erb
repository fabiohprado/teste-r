<div class="card" style="width: 18rem;">
    <div class="card-body">
    <h5 class="card-title"> <%= @friend.primeiro_nome %> <%= @friend.ultimo_nome %> </h5>
    <p class="card-text"><%= @friend.email %> </br> <%= @friend.telefone %> </br> <%= @friend.twitter %> </p>
    <%= link_to 'Editar', edit_friend_path(@friend), class:"btn btn-secondary" %>
    <%= link_to 'Apagar', @friend, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger" %>
    <br/>
    <br/> 
    <%= link_to 'Voltar', friends_path, class:"btn btn-secondary" %>
  </div>
</div>

